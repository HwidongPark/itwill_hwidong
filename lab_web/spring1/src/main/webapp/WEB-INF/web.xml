<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
    id="WebApp_ID" version="5.0">

    <display-name>spring1</display-name>

    <!--Context Parameter(WAS의 환경 설정 변수) 설정 -->
    <!-- 스프링 컨텍스트를 저장한 파일 위치를 설정 -->
    <context-param>   <!-- 톰캣이 관리하는 환경설정 변수(?) -->
        <param-name>contextConfigLocation</param-name>   <!-- 이런 변수 이름에다가 -->
        <param-value>/WEB-INF/application-context.xml</param-value> <!-- 이런 값을 할당하겠다. -->
    </context-param>

    <!-- Filter 설정 -->
    <!-- 스프링 프레임워크의 캐릭터 인코딩 필터 설정 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Listener 설정 -->
    <!-- 톰캣(웹서버)에서 어떤 이벤트가 발생했을 때 자동으로 호출되는 것 -->
    <!-- 스프링 프레임워크의 컨텍스트 로더 리스너를 설정 -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Servlet 설정 -->
    <!-- 스프링 프레임워크의 디스패쳐 서블릿 -->
    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/servlet-context.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>    <!-- 서블릿이 여러개 있을 때 가장 먼저 이 서블릿을 시작하겠다라는 의미 -->
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>